@model RoleEditDto

@{
    ViewData["Title"] = "تعديل";
}

<div class="card card-custom">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title" data-aos="fade-left">
            <h2 class="card-label">
                <span class="d-block pt-5 font-size-h2-lg">إضافة صلاحية</span>
            </h2>
        </div>
    </div>
    <hr />
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group" data-aos="fade-left">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group" data-aos="fade-left">
                        <input type="submit" value="تعديل الصلاحية" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-primary">الرجوع للصلاحيات</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
